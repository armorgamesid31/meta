    background: var(--brand-dark);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 0.95rem;
    position: relative;
    margin-bottom: 1rem;
  }

