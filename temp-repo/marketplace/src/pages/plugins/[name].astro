  }

  .header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--brand-dark);
    font-family: 'Poppins', sans-serif;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
    font-size: 0.9rem;
    font-family: 'Poppins', sans-serif;
  }

  .meta-item {
    color: var(--brand-mid-gray);
  }

  .badge {
    background: var(--brand-light-gray);
    border: 1px solid var(--brand-mid-gray);
