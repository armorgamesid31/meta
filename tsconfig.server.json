{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/server.ts",
    "src/routes/salon.ts",
    "src/routes/bookings.ts",
    "src/routes/auth.ts",
    "src/routes/availability.ts",
    "src/prisma.ts",
    "src/config.ts"
  ],
  "exclude": [
    "src/**/*.tsx",
    "src/App.tsx",
    "src/main.tsx",
    "src/components/**/*",
    "src/pages/**/*",
    "src/vite-env.d.ts",
    "node_modules",
    "src/**/*.test.ts",
    "src/comprehensive.test.ts",
    "tests/**/*",
    "src/routes/admin.ts",
    "src/routes/sessions.ts",
    "src/routes/magic.ts",
    "src/utils/behaviorTracking.ts",
    "src/utils/noShowDetector.ts",
    "src/utils/testDataManager.ts",
    "src/middleware/auth.ts"
  ]
}